<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Listar</title>
    <link rel="stylesheet" type="text/css" href="/styles/globalStyles.css">
    <link rel="stylesheet" type="text/css" href="/styles/listar.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>
</head>
<body>
    <div class="header">
        <%- include('../components/header'); %>
    </div>
    <div class="pageContainer d-flex">
        <div class="sidebar">
            <%- include('../components/sidebar'); %>
        </div>
        <div class="container-listagem d-flex flex-column align-items-center">
            <div class="table-container p-5">
                <table class="table table-dark table-striped">
                    <thead>
                        <th>ID</th>
                        <th>Nome</th>
                        <th>Nota 1</th>
                        <th>Nota 2</th>
                        <th>Media</th>
                        <th>Situação</th>
                    </thead>
                    <tbody>
                    <% alunos.forEach(function(aluno){ %>
                        <tr>
                           <th><%= aluno.id %></th>
                           <td><%= aluno.nome %></td>
                           <td><%= aluno.primeiraNota %></td>
                           <td><%= aluno.segundaNota %></td>
                           <td><%= aluno.media %></td> 
                           <td><%= aluno.situacao%></td>        
                       </tr> 
                    <% }); %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</body>
</html>
